{% extends 'base.html.twig' %}

{% block title %}Command index{% endblock %}

{% block body %}
    <h1>Command index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IdCmd</th>
                <th>IdProd</th>
                <th>IdClient</th>
                <th>DesCmd</th>
                <th>CmdDate</th>
                <th>DlvrDate</th>
                <th>TotalCmd</th>
                <th>CmdStatus</th>
                <th>DlvrStatus</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for command in commands %}
            <tr>
                <td>{{ command.id }}</td>
                <td>{{ command.IdCmd }}</td>
                <td>{{ command.IdProd }}</td>
                <td>{{ command.IdClient }}</td>
                <td>{{ command.DesCmd }}</td>
                <td>{{ command.CmdDate ? command.CmdDate|date('Y-m-d') : '' }}</td>
                <td>{{ command.DlvrDate ? command.DlvrDate|date('Y-m-d') : '' }}</td>
                <td>{{ command.TotalCmd }}</td>
                <td>{{ command.CmdStatus }}</td>
                <td>{{ command.DlvrStatus }}</td>
                <td>
                    <a href="{{ path('command_show', {'id': command.id}) }}">show</a>
                    <a href="{{ path('command_edit', {'id': command.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('command_new') }}">Create new</a>
{% endblock %}
