{% extends 'admin/base.html.twig' %}

    {% block customStylesheets %}
        <link type="text/css" href="{{ asset('back/vendors/jasny-bootstrap/css/jasny-bootstrap.css') }}" rel="stylesheet" />
        <link type="text/css" href="{{ asset('back/vendors/summernote/summernote.css') }}" rel="stylesheet" media="screen" />
        <link type="text/css" href="{{ asset('back/vendors/jasny-bootstrap/css/jasny-bootstrap.min.css') }}" rel="stylesheet">
        <link type="text/css" href="{{ asset('back/vendors/datatables/css/dataTables.bootstrap.css') }}" rel="stylesheet" />
        <link type="text/css" href="{{ asset('back/vendors/bootstrapvalidator/dist/css/bootstrapValidator.css') }}" rel="stylesheet" />
    {% endblock %}

{% block body %}
    <aside class="right-side right-padding">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <!--section starts-->
            <h2>Courses</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="index.html">
                        <i class="fa fa-fw fa-home"></i> Dashboard
                    </a>
                </li>
                <li>
                    <a href="#">Course Schedule</a>
                </li>
                <li>
                    <a href="courses.html">Courses</a>
                </li>
            </ol>
        </section>
        <!--section ends-->
        <div class="container-fluid">
            <!--main content-->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <i class="fa fa-fw fa-file-text-o"></i> Add Course
                            </h4>
                            <span class="pull-right">
                                    <i class="glyphicon glyphicon-chevron-up showhide clickable"></i>
                                    <i class="glyphicon glyphicon-remove removepanel"></i>
                                </span>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-12">
                                    {{ form_start(form,{'attr':{'novalidate': 'novalidate','id':'course_form','class':'form-horizontal'}}) }}

                                        <div class="form-body">
                                            <div class="form-group">
                                                <label for="course_name" class="col-md-3 control-label">
                                                    Gym Name
                                                    <span class='require'>*</span>
                                                </label>
                                                <div class="col-md-7">
                                                    <div class="input-group">
                                                            <span class="input-group-addon">
                                                                <i class="fa fa-fw fa-file-text-o"></i>
                                                            </span>
                                                        {{ form_widget(form.name) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="course_duration" class="col-md-3 control-label">
                                                    Gym Duration
                                                    <span class='require'>*</span>
                                                </label>
                                                <div class="col-md-7">
                                                    <div class="input-group">
                                                            <span class="input-group-addon">
                                                                <i class="fa fa-fw fa-file-text-o"></i>
                                                            </span>
                                                        {{ form_widget(form.Duration) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="course_price" class="col-md-3 control-label">
                                                    Subscription Price
                                                    <span class='require'>*</span>
                                                </label>
                                                <div class="col-md-7">
                                                    <div class="input-group">
                                                            <span class="input-group-addon">
                                                                <i class="fa fa-usd" aria-hidden="true"></i>
                                                            </span>
                                                        {{ form_widget(form.Price) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-3 control-label">Image</label>
                                                <div class="col-md-7 text-center">
                                                    <div class="input-group">
                                                        <div class="fileinput fileinput-new" data-provides="fileinput">
                                                            <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                                                <img data-src="holder.js/200x150" src="#" alt="profile">
                                                            </div>
                                                            <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"></div>
                                                            <div class="select_align">
                                                                    <span class="btn btn-primary btn-file">
                                                                        <span class="fileinput-new">Select image</span>
                                                                    <span class="fileinput-exists">Change</span>
                                                                    {{ form_widget(form.image) }}
                                                                    </span>
                                                                <a href="#" class="btn btn-primary fileinput-exists" data-dismiss="fileinput">Remove</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-3 control-label">
                                                    Description
                                                    <span class='require'>*</span>
                                                </label>
                                                <div class="col-md-7">
                                                    <div class="input-group">
                                                        {{ form_widget(form.description) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-actions">
                                            <div class="row">
                                                <div class="col-md-offset-3 col-md-7">
                                                    {{ form_widget(form.save) }} &nbsp;
                                                    <a class="btn btn-danger" href="admin_courseschedule.html"> Cancel</a>
                                                    <input type="reset" id="add-news-reset-editable" class="btn btn-default reset-styles" value="Reset">
                                                </div>
                                            </div>
                                        </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <!-- Basic charts strats here-->
                    <div class="panel panel-success">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <i class="fa fa-fw fa-file-text-o"></i> Gyms
                            </h4>
                            <span class="pull-right">
                                    <i class="glyphicon glyphicon-chevron-up showhide clickable"></i>
                                    <i class="glyphicon glyphicon-remove removepanel"></i>
                                </span>
                        </div>
                        <div class="panel-body table-responsive">
                            <table class="table table-bordered" id="fitness-table">
                                <thead>
                                <tr>
                                    <th>Gym Name</th>
                                    <th>Duration</th>
                                    <th>Price</th>
                                    <th>Edit/Save</th>
                                    <th>Delete/Cancel</th>
                                </tr>
                                </thead>
                                <tbody>

                                    {% for gym in gyms %}
                                        {% if gym is not null %}
                                <tr>
                                    <td>{{ gym.name }}</td>
                                    <td>{{ gym.duration}} Months</td>
                                    <td>${{ gym.price }}</td>
                                    <td>
                                        <a class="edit btn btn-primary mar-bm" href="javascript:;">
                                            <i class="fa fa-fw fa-edit"></i> Edit
                                        </a>
                                    </td>
                                    <td>
                                        <a class="delete btn btn-danger mar-bm" href="javascript:;">
                                            <i class="fa fa-trash-o"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                                        {% else %}
                                            <p>Empty !</p>
                                        {% endif %}
                                    {% endfor %}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- col-md-6 -->
            <!--row -->
            <!--row ends-->
        </div>
        <!-- /.content -->
    </aside>
{% endblock %}

{% block customJs %}
    <script src="{{ asset('back/vendors/holder/holder.js') }}" type="text/javascript"></script>
    <script src="{{ asset('back/vendors/jasny-bootstrap/js/jasny-bootstrap.js') }}" type="text/javascript"></script>
    <script src="{{ asset('back/vendors/summernote/summernote.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('back/vendors/datatables/js/jquery.dataTables.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('back/vendors/datatables/js/dataTables.bootstrap.js') }}" type="text/javascript"></script>
    <script src="{{ asset('back/vendors/bootstrapvalidator/dist/js/bootstrapValidator.js') }}" type="text/javascript"></script>
    <script src="{{ asset('back/vendors/sweetalert/dist/sweetalert2.js') }}" type="text/javascript"></script>

{% endblock %}