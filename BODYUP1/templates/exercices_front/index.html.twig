{% extends 'base.html.twig' %}

{% block title %}Hello ExercicesFrontController!{% endblock %}

{% block body %}

    <!-- SubHeader =============================================== -->
    <section class="parallax_window_in" data-parallax="scroll" data-image-src="img/sub_header_general.jpg" data-natural-width="1400" data-natural-height="470">
        <div id="sub_content_in">
            <h1>BODYUP Workout Videos</h1>
            <p>"Check our finest Workouts here"</p>
        </div>
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/starrating/css/rating.css') }}" />
        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
        <script src="{{ asset('bundles/starrating/js/rating.js') }}"></script>
    </section>
    <!-- End section -->
    <!-- End SubHeader ============================================ -->

    <div class="container_styled_1">
        <div class="container margin_60_35">
            <div class="row">

                <aside class="col-md-3 col-md-push-9" id="sidebar">

                    <div  class="sidebar-search">

                        <div class="input-group custom-search-form">


                        <input type="text" id="finder" class="form-control" placeholder="search now" >

                        </div>

                    </div>

                    <h3></h3>


                    <div class="theiaStickySidebar">
                        <div id="filters_col">
                            <a data-toggle="collapse" href="#collapseFilters" aria-expanded="false" aria-controls="collapseFilters" id="filters_col_bt">Filters </a>
                            <div class="collapse" id="collapseFilters">
                                <div class="filter_type">
                                    <h6>Price</h6>
                                    <input type="text" id="range" name="range" value="">
                                </div>
                                <div class="filter_type">
                                    <h6>Category</h6>
                                    <ul>
                                        {% for cat in categories %}
                                        <li>
                                            <label>{{ cat.catName }}</label>
                                            <input type="checkbox" class="js-switch" checked>
                                        </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                                <div class="filter_type">
                                    <h6>Level</h6>
                                    <ul>
                                        <li>
                                            <label>Beginner</label>
                                            <input type="checkbox" class="js-switch" checked>
                                        </li>
                                        <li>
                                            <label>Intermediate</label>
                                            <input type="checkbox" class="js-switch" checked>
                                        </li>
                                        <li>
                                            <label>Professional</label>
                                            <input type="checkbox" class="js-switch" checked>
                                        </li>
                                    </ul>
                                </div>

                            </div>
                            <!--End collapse -->
                        </div>
                        <!--End filters col-->
                    </div>
                    <!--End Sticky -->
                </aside>
                <!--End aside -->

                <div class="col-md-9 col-md-pull-3">
                    {% for exercice in exercices %}
                    <div class="row" id="row">
                        <div class="col-sm-6 wow fadeIn" data-wow-delay="0.1s">
                            <div class="course_container" id="cc">
                                {% if exercice.price == 0 %}
                                <div class="ribbon top"><span>get now</span></div>
                                 {% endif %}
                                <figure>
                                    <a href="/se/{{ exercice.Exid }}">
                                        <img src="{{ asset('front/img/'~ exercice.image) }}" width="800" height="533" class="img-responsive" alt="Image">
                                        <div class="short_info"><i class="icon-clock-1"></i>{{exercice.duration}} min</div>
                                    </a>
                                </figure>
                                <div class="course_title"><div class="type"><span>{{exercice.level}}</span></div>
                                    <h3><a href="/se/{{ exercice.Exid }}">{{exercice.name}}</a></h3>
                                    {% if exercice.price == 0 %}
                                    <div class="info_2 clearfix"><span class="price">free<sup></sup></span><span class="pull-right">{{exercice.label}}</span></div>
                                    {% else %}
                                    <div class="info_2 clearfix"><span class="price">{{ exercice.price }}<sup>TND</sup></span><span class="pull-right">{{exercice.label}}</span></div>
                                    {% endif %}
                                    {% for i in 1..exercice.rate| round %}
                                    <i class="icon-star"></i>
                                    {% endfor %}
                                </div>
                                <div class="col-lg-5 ml-auto pl-lg-5 text-center">

                                </div>
                            </div>

                            <!-- End box course_container -->
                        </div>
                        <!-- End col-md-6 -->
                        {% endfor %}

                        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
                        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
                        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
                        <script>
                            $(document).ready(function(){
                                $('#finder').keyup(function(){
                                    search_table($(this).val());
                                });
                                function search_table(value){
                                    $('#row #cc').each(function(){
                                        var found = 'false';
                                        $(this).each(function(){
                                            if($(this).text().toLowerCase().indexOf(value.toLowerCase()) >= 0)
                                            {
                                                found = 'true';
                                            }
                                        });
                                        if(found === 'true')
                                        {
                                            $(this).show();

                                        }
                                        else
                                        {
                                            $(this).hide();

                                        }
                                    });
                                }
                            });
                        </script>
                    </div>
                    <!-- End row -->

                    <nav>
                        <ul class="pagination">
                            <li class="disabled"><a href="#" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a>
                            </li>
                            <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a>
                            </li>
                            <li><a href="#">2</a>
                            </li>
                            <li><a href="#">3</a>
                            </li>
                            <li><a href="#">4</a>
                            </li>
                            <li><a href="#">5</a>
                            </li>
                            <li>
                                <a href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <!-- End col -->
            </div>
            <!-- End Row -->
        </div>
        <!-- End container -->
    </div>
    <!-- End container_styled_1 -->
    <script src="{{ asset('front/js/ion.rangeSlider.min.js') }}"></script>
    <script src="{{ asset('front/js/switchery.min.js') }}"></script>
    <script>
        $("#range").ionRangeSlider({
            hide_min_max: true,
            keyboard: true,
            min: 0,
            max: 10,
            from: 0,
            to: 5,
            type: 'double',
            step: 1,
            prefix: "TND",
            grid: false
        });
        var elems = Array.prototype.slice.call(document.querySelectorAll('.js-switch'));
        elems.forEach(function (html) {
            var switchery = new Switchery(html, {
                size: 'small'
            });
        });
    </script>







{% endblock %}
