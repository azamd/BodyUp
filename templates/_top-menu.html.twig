{% trans_default_domain 'menu' %}
<nav class="navbar navbar-expand-md navbar-dark bg-primary">
    <a class="navbar-brand" href="{{ path('app_homepage') }}">{{ 'nav.brand'|trans }}</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarsExample04">
        {% if is_granted('ROLE_USER') %}
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="/">{{ 'nav.home'|trans }}</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('app_backend') }}">{{ 'nav.backend'|trans }}</a>
            </li>
        </ul>
        {% endif %}
       
        {% if is_granted('ROLE_USER') %}
            <a href="{{ path('security_logout') }}" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">{{ 'nav.logout'|trans }}</a>&nbsp;
        {% else %}
            <a href="{{ path('user_register') }}" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">{{ 'nav.register'|trans }}</a>&nbsp;
            <a href="{{ path('security_login') }}" class="btn btn-secondary btn-sm active" role="button" aria-pressed="true">{{ 'nav.login'|trans }}</a>
        {% endif %}
    </div>
</nav>
