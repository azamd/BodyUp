{% extends 'baseMenu.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="card" >
    <div class="card-header">
        <h1>Utilisateur</h1>
        
        {{ include('user/_delete_form.html.twig') }}
    </div>
    <div class="card-body">
        <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.adresse }}</td>
            </tr>
            <tr>
                <th>Is_admin</th>
                <td>{{ user.isAdmin ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    </div>
</div>


{% endblock %}
